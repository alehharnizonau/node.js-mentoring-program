{
  "name": "node_js_course",
  "version": "1.0.0",
  "description": "Node.js mentoring course home tasks",
  "main": "src/online-shop/index.ts",
  "scripts": {
    "task-1": "node repl.js",
    "task-2": "node activityMonitor.js",
    "task-3-1": "nodemon eventEmitter.js",
    "task-3-2": "nodemon withTime.js",
    "task-3-3": "nodemon csvToJson.js",
    "task-4-test": "jest",
