    "body-parser": "^1.20.2",
    "csvtojson": "^2.0.10",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/orm.config.ts",
      "./dist/config/orm.config.js"
