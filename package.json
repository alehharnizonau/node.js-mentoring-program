    "@types/bcryptjs": "^2.4.5",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.6.3",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.8.8",
    "@mikro-orm/core": "^5.8.8",
